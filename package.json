{
  "name": "infrastructure",
  "version": "1.0.0",
  "bin": {
    "infrastructure": "bin/app.js"
  },
  "scripts": {
    "cdk": "cdk",
    "build": "cdk synth",
    "watch": "cdk watch --hotswap",
    "clean": "rm -fr cdk.out/ cdk.local.out/",
    "clean-build": "npm run clean && npm run build",
    "local-build": "cdk synth -a \"ts-node --prefer-ts-exts bin/local.ts\" -o cdk.local.out",
    "sam-local": "npm run local-build && sam local start-lambda -n envfile.json -t cdk.local.out/Infrastructure-AppStage.template.json",
    "test": "jest",
    "go-test": "cd src && go test ./... -short -coverprofile=cov.out -covermode=count -trimpath | gsed 's|infrastructure/|infrastructure/src/|g' > report.json && gsed -i 's|infrastructure/|src/|g' cov.out",
    "ci-test": "cd src && go test ./... -short -coverprofile=cov.out -covermode=count --json | sed 's|infrastructure/|infrastructure/src/|g' > report.json && sed -i 's|infrastructure/|src/|g' cov.out",
    "cdklocal": "cdklocal",
    "ts-node": "ts-node",
    "sam-build": "sam build -t cdk.local.out/Infrastructure-AppStage.template.json",
    "local-bootstrap": "cdklocal -a \"ts-node --prefer-ts-exts bin/local.ts\" -o cdk.local.out bootstrap aws://000000000000/us-west-2",
    "local-deploy": "cdklocal -a \"ts-node --prefer-ts-exts bin/local.ts\" -o cdk.local.out deploy",
    "bootstrap": "./scripts/bootstrap-accounts.sh",
    "deploy": "./scripts/deploy-pipeline.sh",
    "bootstrap:tools": "cdk bootstrap aws://401448503050/us-east-2 --profile tools --qualifier mbb313cmk",
    "bootstrap:dev": "cdk bootstrap aws://521805123898/us-east-2 --profile dev --qualifier mbb313cmk --trust 401448503050",
    "bootstrap:prod": "cdk bootstrap aws://186375394147/us-east-2 --profile prod --qualifier mbb313cmk --trust 401448503050",
    "validate": "./scripts/validate-before-push.sh",
    "synth": "cdk synth --app 'npx ts-node bin/app.ts'"
  },
  "devDependencies": {
    "@aws-sdk/client-sfn": "^3.734.0",
    "@faker-js/faker": "^9.4.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^22.12.0",
    "@types/prettier": "^3.0.0",
    "@types/uuid": "^8.3.4",
    "aws-cdk": "2.176.0",
    "aws-cdk-local": "^2.18.0",
    "jest": "^29.7.0",
    "jest-openapi": "^0.14.2",
    "prettier": "^2.8.1",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "yargs": "^17.5.1"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-go-alpha": "2.176.0-alpha.0",
    "aws-cdk-lib": "2.176.0",
    "constructs": "^10.4.2",
    "js-yaml": "^4.1.0",
    "openapi3-ts": "^3.0.2",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.0"
  }
}